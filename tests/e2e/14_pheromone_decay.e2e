# Test pheromone decay: values decrease over time
reset_game
set_spawn_enabled 0
wait_frames 5

# Set a strong pheromone value
set_pheromone 25 25 0 200
assert_pheromone 25 25 0 gte 190

# Decay runs every 1.5s, decrements by 1 each tick.
# After 8 seconds (~5 decay ticks), value should drop by ~5.
wait 8
assert_pheromone 25 25 0 lt 196
assert_pheromone 25 25 0 gte 1
